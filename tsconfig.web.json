{
  "extends": "@bassist/tsconfig/web.json",
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // 设置在 typeRoots 目录（node_modules/@types）下需要包括在编译之中的类型模块，默认是取 typeRoots 的所有类型模块
    "types": ["element-plus/global", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
